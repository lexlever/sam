
<%- include ('partial/header') -%>
<div class="row">
    <div class="page-header"><%= p.title %> </div>
    <div class="col-xs-12 col-md-5">
        <img src="<%= p.imgSrc %>" alt="" class="spi">
    </div>
    <div class="col-xs-12 col-md-7">
        <p><%= p.desc %> </p>
        <p>$<%= parseFloat(p.price).toFixed(2) %> </p>
        <% if(loggedIn) {%>
            <p><a href="/cart/add/<%= p.slog %> ">Add to cart</a></p>
    <% } else { %>  
        <p>You must be logged in to purchase item</p>
    <% } %> 
        

    </div>
    <div class="col-xs-12 col-md-5">

            <img src="<%= p.multipleSrc %>" alt="" class="spi">
    </div>
</div>
